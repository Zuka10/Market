{
  "JwtSettings": {
    "Issuer": "Market.API",
    "Audience": "Market.Client",
    "AccessTokenExpirationMinutes": 15,
    "RefreshTokenExpirationDays": 7,
    "ValidateIssuer": true,
    "ValidateAudience": true,
    "ValidateLifetime": true,
    "ValidateIssuerSigningKey": true,
    "ClockSkewMinutes": 5
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning",
      "Microsoft.AspNetCore.Hosting": "Information",
      "Microsoft.AspNetCore.Routing": "Information",
      "Market.API.Middleware.RequestLoggingMiddleware": "Information",
      "Market.API.Filters.ControllerLoggingFilter": "Information",
      "Market.API.GlobalExceptionHandler": "Information",
      "Market.Application.Common.Behaviors.LoggingBehaviour": "Information"
    },
    "Console": {
      "FormatterName": "simple",
      "FormatterOptions": {
        "SingleLine": true,
        "IncludeScopes": true,
        "TimestampFormat": "yyyy-MM-dd HH:mm:ss.fff ",
        "UseUtcTimestamp": true
      }
    }
  },
  "AllowedHosts": "*"
}